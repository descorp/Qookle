<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QookleApp.MainPage" xmlns:local="clr-namespace:QookleApp;assembly=QookleApp">
 <ContentPage.Content>
   <ScrollView BackgroundColor="Yellow">
		<RelativeLayout>
			<Image Source="StartScreen.jpg" Aspect="Fill" VerticalOptions="Fill" />
			<StackLayout>
				<StackLayout Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Center"  Padding="10, 0, 0, 0" Orientation="Horizontal" x:Name="FaceBookAccountLayout">
					<local:RoundedImage HeightRequest="80" WidthRequest="80"  x:Name="FacebookPictureImage" IsVisible="false" VerticalOptions="Fill" HorizontalOptions="StartAndExpand"  />
					<Label Text="" x:Name="FacebookUser" VerticalOptions="Center"/>
					<local:RoundedImage HeightRequest="80" WidthRequest="80"  x:Name="FacebookImageButton" Source="facebook.png" VerticalOptions="Fill" HorizontalOptions="EndAndExpand"  />
				</StackLayout>
				
				<Grid Grid.Row="1" HorizontalOptions="Fill">
					<Image HeightRequest="120" x:Name="HeaderImage" Source="Qookle.jpg" VerticalOptions="Fill" HorizontalOptions="Fill"/>
				</Grid>
				
				<StackLayout Padding="8, 0, 8, 0" Grid.Row="1" VerticalOptions="End">
					<Entry BackgroundColor="White" TextColor="Silver" Placeholder="Inserisci qui gli ingredienti" Text="{Binding TextToSearch}" x:Name="TextEntry"/>
				</StackLayout>
				
				<Grid VerticalOptions="FillAndExpand" Padding="8, 0, 8, 0" MinimumHeightRequest="200" HeightRequest="200">
				<Grid.RowDefinitions>
-  				 <RowDefinition Height="Auto"/>
-  				 <RowDefinition Height="*"/>
-  				 </Grid.RowDefinitions>
					<local:WrapLayout Grid.Row="0" x:Name="SelectedIngredientsList" VerticalOptions="FillAndExpand"  Orientation="Horizontal"/>
					<local:WrapLayout Grid.Row="1" x:Name="SearchedIngredientsList"  Orientation="Horizontal"  />
				</Grid>
				
				<Grid Grid.Row="3" HeightRequest="100" x:Name="QookButtonGrid" VerticalOptions="End">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="*"/>
-  				 </Grid.ColumnDefinitions>
					<local:RoundedImage  Source="Button.jpg" Grid.Column="1"  x:Name="QookButton"     />
				</Grid>			
			</StackLayout>		
		</RelativeLayout>		
	</ScrollView>
 </ContentPage.Content>
</ContentPage>