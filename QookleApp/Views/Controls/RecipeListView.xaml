<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QookleApp.RecipeListView">
	<ContentView.Content>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Image Grid.Column="0" Grid.Row="0" Source="{Binding publisherimage}" Grid.RowSpan="2"/>
		<Label Text="{Binding title}" HorizontalOptions="Start" Grid.Row="0" Grid.Column="1" VerticalOptions="Center" Font="Micro"/>
		<Label Text="{Binding publisher}" HorizontalOptions="Start" TextColor="Blue" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Font="Micro"/>
		<Image Source="{Binding img}" Grid.Row="2" HorizontalOptions="Fill" Grid.ColumnSpan="2" Grid.Column="0"/>
	</Grid>
	</ContentView.Content>
</ContentView>